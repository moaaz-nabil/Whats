<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="whatsapp_contacts_wizard" model="ir.ui.view">
        <field name="name">Whats App</field>
        <field name="model">whatsapp.messegecontacts</field>
        <field name="arch" type="xml">
            <form>
                <group>
                    <field name="user" />
                    <field name="mobile" />
                    <field name="message" />
                </group>
                <footer>
                    <button string="Send" 
                            name="send_message_whats" 
                            type="object" 
                            class="btn btn-success"
                            icon="fa-whatsapp"/>
                    <button string="Cancel" 
                            name="cancel" 
                            special = "cancel" 
                            class="oe_highlight"/>        
                </footer>
            </form>
        </field>
    </record>

</odoo>
